            type: "POST",
            url: "/Admin/Car/CheckEdit",
            data: { CarId: CarId },
            contenttype: "application/json; charset=utf-8",
            datatype: "json",
            success: function (response) {
                if (response) {
                    swal({
                        title: "Can not edit this car!",
                        text: "This car exsited in sell order",

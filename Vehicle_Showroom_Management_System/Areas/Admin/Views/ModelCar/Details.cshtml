@model Vehicle_Showroom_Management_System.Areas.Admin.Data.ModelCar

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Index.cshtml";
}
<div class="container">
    <hr />
    <h2><b>Details of Car Model</b></h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <div class="row">
                <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.ModelCarName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ModelCarName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.UpdatedDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UpdatedDate)
                    </dd>
                </div>
                <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.Brand.BrandName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Brand.BrandName)
                    </dd>
                    <dt>
                        Logo Brand
                    </dt>

                    <dd>
                        <img src="/Areas/Admin/Contents/Images/@Model.Brand.Image" class="img-responsive" width="100px" height="100px" />
                    </dd>
                </div>
            </div>
        </dl>
    </div>
    <p>
        <a href="/Admin/ModelCar" class="btn btn-primary" style="font-weight: bold">Back to List</a>&nbsp;&nbsp;
        <a href="/Admin/ModelCar/Edit?ModelCarId=@Model.ModelCarId" class="btn btn-success" style="font-weight: bold">Edit</a>
    </p>
</div>

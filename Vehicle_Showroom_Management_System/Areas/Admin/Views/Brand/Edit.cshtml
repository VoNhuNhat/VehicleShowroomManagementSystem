@model Vehicle_Showroom_Management_System.Areas.Admin.Data.Brand

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Index.cshtml";
}

<div class="container">
    <br />
    <h2 style="text-align: center"><b>Edit Brand</b></h2>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formEdit" }))
    {
        @Html.AntiForgeryToken()


<div class="form-horizontal">
    <h4>Brand</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.BrandId)

    <div class="form-group">
        <b>
            @Html.LabelFor(model => model.BrandName, htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <b>
            @Html.LabelFor(model => model.image, htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-left:140px;margin-top: 45px;">
        <a onclick="clickTest()" class="btn btn-success" style="color: white"><b>Update user</b></a>&nbsp;&nbsp;&nbsp;
        <a href="/Admin/UserAccount" class="btn btn-primary"><b>Back to List</b></a>
    </div>
    <button type="submit" id="btnSubmit" disabled hidden class="btn btn-success"></button>
</div>
    }

    
</div>